        "files": ["*.html"],
        "options": {
          "printWidth": 120,
          "tabWidth": 2,
          "singleQuote": false,
          "useTabs": true
        }
      },
      {
        "files": ["*.css"],
        "options": {
          "tabWidth": 2,
          "singleQuote": true,
          "useTabs": true
        }
      }
    ]
  }